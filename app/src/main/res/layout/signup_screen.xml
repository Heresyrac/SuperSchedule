<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20dp"
            android:textColor="@color/material_red_a200"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="User name"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/signup_username"
            android:layout_width="0dp"
            android:layout_weight = "3"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20dp"
            android:textColor="@color/material_red_a200"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Profile Photo"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />

        <ImageButton
            android:id="@+id/signup_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20dp"
            android:textColor="@color/material_red_a200"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="0dp"
            android:layout_weight = "3"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Phone"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="0dp"
            android:layout_weight = "3"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20dp"
            android:textColor="@color/material_red_a200"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Password"
            android:textSize="15dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="0dp"
            android:layout_weight = "3"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/signup_showhide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="show/hide"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Minimum 7 characters, including numbers and letters"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20dp"
            android:textColor="@color/material_red_a200"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Confirm"
            android:textSize="15dp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/signup_confirm"
            android:layout_width="0dp"
            android:layout_weight = "3"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <Button
            android:id="@+id/signup_return"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_add_bg"
            android:text="return"
            android:textColor="@color/N_white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/signup_enroll"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_add_bg"
            android:text="enroll"
            android:textColor="@color/N_white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
